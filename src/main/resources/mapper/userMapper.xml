<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.feng.dao.UserMapper">


    <select id="findAllUsers" resultType="cn.feng.entity.User" parameterType="map">
        SELECT <include refid="userColumn"/> FROM [tb_user] limit #{start},#{size}
    </select>

    <select id="getUsersById" resultType="cn.feng.entity.User" parameterType="int">
        SELECT <include refid="userColumn"/> FROM [tb_user] WHERE id=#{id}
    </select>

    <select id="getUsersCount" resultType="int">
        SELECT COUNT (Id) FROM [tb_user]
    </select>

    <select id="findUsersSelective" resultType="cn.feng.entity.User" parameterType="cn.feng.entity.User">
        SELECT <include refid="userColumn"/> FROM [tb_user] WHERE username=#{username}
    </select>

    <select id="getUsersByName" parameterType="string" resultType="cn.feng.entity.User" >
        SELECT <include refid="userColumn"/> FROM [tb_user] WHERE username= #{username}
    </select>

    <update id="updateUser" parameterType="cn.feng.entity.User">
        UPDATE [tb_user] set password = #{password} WHERE Id = #{Id}
    </update>

    <insert id="addUser" parameterType="cn.feng.entity.User">
        INSERT INTO [tb_user](username,password,roleId,create_time) VALUES (#{username},#{password},#{roleId},#{createTime})
    </insert>
    <delete id="deleteUser" parameterType="int">
        DELETE FROM [tb_user] WHERE id=#{id}
    </delete>

    <sql id="userColumn">Id,username,password,role_id,create_time,last_login_time</sql>
    <sql id="usersColumn">username,password,role_id,createTime,lastLoginTime</sql>




    <resultMap id="userInfoMap" type="cn.feng.entity.UserInfo">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="num" property="num"/>
        <result column="password" property="password"/>
        <result column="create_time" property="createTime"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <association column="role_id" property="role" javaType="cn.feng.entity.Role">
            <id  column="role_id" property="id"/>
            <result column="role_name" property="roleName" />
        </association>
    </resultMap>

    <select id="listUserInfo" resultMap="userInfoMap">
        SELECT * from view_userInfo
    </select>
</mapper>